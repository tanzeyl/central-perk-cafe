<div class="container">
  <div class="MenuBackground">
    <div class="row">
      <div class="col-xs-12">
        <br>
        <h1 class="card-title text-center">Menu Items</h1>
        <% MenuCategory.all.each do |category| %>
          <% menuItems = MenuItem.where(menu_category_id: category.id) %>
          <% unless menuItems.count == 0 %>
            <div class="table-responsive">
              <center><h3 class="MenuTitle"><%= category.name.upcase %></h3></center>
              <table class="table table-shopping">
                <thead>
                  <tr class="text-center">
                    <th>Serial Number</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Status</th>
                  </tr>
                </thead>

                <tbody>
                  <% index = 1 %>
                  <% menuItems.each do |menu| %>

                    <tr class="text-center">
                      <td><%= index %></td>
                          <% index += 1 %>
                      <td><%= menu.name %></td>
                      <td><%= menu.description %></td>
                      <td>â‚¹ <%= menu.price %></td>
                      <td>
                        <% if menu.available == true %>
                          <%= form_with url: "/add_items/#{menu.id}", method: "get"  do |form| %>
                          <%= form.submit "Marks as unavailable", class: "btn btn-danger" %>
                          <% end %>
                        <% else %>
                          <%= form_with url: "/add_items/#{menu.id}", method: "get"  do |form| %>
                          <%= form.submit "Marks as available.", class: "btn btn-primary" %>
                          <% end %>
                        <% end %>
                      </td>
                      </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <hr/>
          <% end %>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
</div>
<br><br><br><br><br><br><br><br><br><br><br>
