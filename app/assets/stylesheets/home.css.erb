body {
  background-image: url(<%= asset_data_uri 'image.jpg' %>);
  background-size: cover;
  background-repeat: no-repeat;
}

.HomeTitle {
  font-size: 20px;
  margin-bottom: 30px;
  font-family: 'Bebas Neue', cursive;
  letter-spacing: 2px;
  color: black;
  font-weight: 600;
}

.HomeAuthenticate {
  font-size: 15px;
  margin-bottom: 20px;
  font-style: inherit;
  font-family: 'Cinzel', serif;
  color: black;
  font-weight: 600;
}

.HomeLink {
  color: white;
}

.UserHeader {
  padding: 10px;
  background-color: white;
  font-size: 25px;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
  font-family: 'Cormorant Garamond', serif;
  border-radius: 8px;
}

.FlashError {
  font-size: 25px;
  color: black;
  font-weight: 700;
  background-color: rgba(255, 255, 255, 0.7);
  text-align: center;
}


#banner-img {
	padding-top: 90px;
 	padding-bottom: 50px;
 	text-align: center;
 	color: #f8f8f8;
 	height: 700px;
  margin-top: 5%;
}

#banner-content {
	position: relative;
	padding-top: 6%;
	padding-bottom: 6%;
  margin: auto;
  justify-content: center;
  border-radius: 38%;
	background-color: rgba(255, 148, 120, 0.6);
	max-width: 660px;
}

.NavTitle {
    font-family: 'Fuggles';
    font-size: 30px;
    color: white;
    font-weight: 700;
}

.NavbarTop {
    background-color: rgba(0, 0, 0, 0.6);
}

.NavList {
    color: black;
    font-family: 'Cormorant Garamond', serif;
    font-size: 20px;
    font-weight: 600;
}

footer {
  font-size: 16px;
	background-color: rgba(0, 0, 0, 0.6);
	color: white;
  font-weight: 600;
  margin: auto;
  padding-top: 2%;
	width: 100%
}

.NavItem {
  color: black;
  padding-top: 5px;
}

.SignOutLink {
  float: right;
  margin-right: 10px;
  font-size: 25px;
}

.btn:hover {
  background: #154d70;
  text-decoration: none;
}

.PageTitle {
  margin-left: 10px;
}
