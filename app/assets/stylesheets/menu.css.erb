.MenuBackground {
  background-color: rgba(241, 169, 160, 0.8);
  border-radius: 12px;
  margin-bottom: 20px;
}

.MenuBackground2 {
  background-color: rgba(0, 0, 0, 1);
  border-radius: 12px;
  margin-bottom: 20px;
}

th, td {
  text-align: center;
  margin-right: 10px;
  margin-left: 10px;
  font-size: 25px;
}

.PageTitle {
  background-color: rgba(255, 255, 255, 0.7);
  color: black;
  font-family: 'Cinzel', serif;
  margin-top: 20px;
  margin-bottom: 20px;
  border: 3px solid black;
  border-radius: 12px;
}

.MenuTitle {
  margin-bottom: 40px;
  color: white;
  font-family: 'STIX Two Math', serif;
  border-radius: 4px;
}

.ShopCart-total {
  text-align: right;
  font-family: 'STIX Two Math', serif;
  margin-right: 5px;
}

.ShopCart-checkout {
  text-align: right;
  margin-right: 5px;
}

.ShopCart-header {
  margin-top: 10px;
}

.CheckoutText {
  margin-right: 5px;
  color: black;
  font-family: 'STIX Two Math', serif;
  font-weight: 700;
}

hr {
  border-top: 1px solid white;
}

tr:nth-child(even){background-color: rgba(236, 100, 75, 1);}
tr:nth-child(odd){background-color: rgba(255, 148, 120, 1);}
tr:hover {background-color: rgba(217, 30, 24, 1);}
